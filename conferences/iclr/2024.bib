  publisher = {OpenReview.net},
  series = {ICLR 2024},
  title = {Bongard-OpenWorld: Few-Shot Reasoning for Free-form Visual Concepts in the Real World},
  url = {https://openreview.net/forum?id=hWS4MueyzC},
