  note = {{ICLR} 2024 Spotlight},
  pdf = {https://openreview.net/pdf?id=dHng2O0Jjr},
  publisher = {OpenReview.net},
  title = {{ToolLLM}: Facilitating Large Language Models to Master 16000+ Real-world {APIs}},
