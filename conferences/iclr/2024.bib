  publisher = {OpenReview.net},
  title = {Implicit bias of {SGD} in $L_2$-regularized linear {DNNs}: One-way jumps from high to low rank},
  url = {https://openreview.net/forum?id=P1aobHnjjj},
  year = {2024}
}

