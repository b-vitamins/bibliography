  pdf = {https://openreview.net/pdf?id=uz7d2N2zul},
  publisher = {OpenReview.net},
  title = {Bayesian Coreset Optimization for Personalized Federated Learning},
  url = {https://openreview.net/forum?id=uz7d2N2zul},
