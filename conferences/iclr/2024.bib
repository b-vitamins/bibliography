  note = {DBLP last modified: 2024-08-07},
  pdf = {https://openreview.net/pdf?id=4iPw1klFWa},
  publisher = {OpenReview.net},
  title = {Scalable Neural Network Kernels},
  url = {https://openreview.net/forum?id=4iPw1klFWa},
  year = {2024}
