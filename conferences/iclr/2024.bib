  publisher = {OpenReview.net},
  title = {NOLA: Compressing LoRA using Linear Combination of Random Basis},
  url = {https://openreview.net/forum?id=TjfXcDgvzk},
  year = {2024}
}

@inproceedings{kopiczko2024vera,
