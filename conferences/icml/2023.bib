@inproceedings{altekru2023neural,
  author       = {Fabian Altekr{\"u}ger and Johannes Hertrich and Gabriele Steidl},
  title        = {Neural {W}asserstein Gradient Flows for Discrepancies with {R}iesz Kernels},
