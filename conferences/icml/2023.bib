  mdate        = {2023-08-28},
}

@inproceedings{li2023deep,
  author       = {Aodong Li and Chen Qiu and Marius Kloft and Padhraic Smyth and Stephan Mandt and Maja Rudolph},
  title        = {Deep Anomaly Detection under Labeling Budget Constraints},
