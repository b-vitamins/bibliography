  mdate        = {2023-08-28},
}

@inproceedings{kim2023regularizing,
  author       = {Hyunsu Kim and Hyungi Lee and Hongseok Yang and Juho Lee},
  title        = {Regularizing Towards Soft Equivariance Under Mixed Symmetries},
