  author = {Xu Zheng and Ziqiao Weng and Yuanhuiyi Lyu and Lutao Jiang and Haiwei Xue and Bin Ren and Danda Pani Paudel and Nicu Sebe and Luc Van Gool and Xuming Hu},
  eprint = {2503.18016},
