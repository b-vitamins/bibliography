  note = {Last revised 9 Dec 2024},
  pdf = {https://arxiv.org/pdf/2311.11255.pdf},
  primaryclass = {cs.SD},
  title = {{M}²{UGen}: Multi-modal Music Understanding and Generation with the Power of Large Language Models},
