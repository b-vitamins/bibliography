@article{evans2000ising,
  abstract = {We study a process in which information is transmitted from a given root node on a noisy tree network. Starting with an unbiased random bit at the root of the tree, the bit is sent down the edges of the tree, where on every edge the bit can be reversed with probability epsilon, and these errors occur independently. The goal is to reconstruct the original bit from the values which arrive at the nth level of the tree. We bound the reconstruction probability from above using the maximum flow on the tree viewed as a capacitated network, and from below using the electrical conductance of the tree. For general infinite trees, we establish a sharp threshold: the probability of correct reconstruction tends to 1/2 as n approaches infinity if (1-2epsilon)^2 is below a certain threshold value.},
  author = {Evans, William and Kenyon, Claire and Peres, Yuval and Schulman, Leonard J.},
