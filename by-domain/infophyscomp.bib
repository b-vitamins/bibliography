  note = {Extended abstract; full version published in Journal of the ACM 54(4):17:1--17:41, 2007},
  pages = {1089--1098},
  publisher = {Society for Industrial and Applied Mathematics},
  series = {SODA '05},
  title = {A New Look at Survey Propagation and its Generalizations},
  url = {https://dl.acm.org/doi/10.5555/1070432.1070583},
  year = {2005}
}

